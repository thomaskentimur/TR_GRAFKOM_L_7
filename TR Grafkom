    glVertex3f(24.5, -10.0, -30.1);
    glEnd();

      //tepi lapangan samping kiri
    glBegin(GL_POLYGON);
    glColor3ub(255,255,255);
    glVertex3f(-24.5, -10.0, 30.0);
    glVertex3f(-24.5, -5.0, 30.0);
    glVertex3f(-24.5, -5.0, -30.1);
    glVertex3f(-24.5, -10.0, -30.1);
    glEnd();
